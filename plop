apiVersion: apps/v1
kind: Deployment
metadata:
  name: testserver2
  labels:
    app: deploy2
    role: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: deploy2
      role: backend
  template:
    metadata:
      labels:
        app: deploy2
        role: backend
    spec:
      containers:
      - name: testserver2
        image: wingardiumleviosa/testserver:v1
        ports:
        - containerPort: 3000
---
apiVersion: v1
kind: Service
metadata:
  name: testserver2
spec:
  ports:
  - port: 3000
    targetPort: 3000
    protocol: TCP
    name: http
  selector:
    app: deploy2